@model Nop.Plugin.Reports.DotnetReport.Models.DotNetReportDataConnection


@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<div class="content">
    <div class="form-horizontal">

        <form asp-controller="DotNetSetup" asp-action="DataConnection" method="post">
            <div class="content-header clearfix">
                <h1 class="pull-left">
                    Data Connection
                </h1>
                <div class="pull-right">
                    <button type="submit" name="save" class="btn bg-blue">
                        <i class="fa fa-floppy-o"></i>
                        @T("Admin.Common.Save")
                    </button>
                    @Html.ActionLink("Go to Setup", "Index", "DotNetSetup", new { Area = "Admin" }, new { @class = "btn btn-default pull-right" })

                </div>
            </div>
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="col-md-12">

                            </div>
                        </div>
                        <br />
                        <div class="form-group">
                            <div class="col-md-3">
                                <nop-label asp-for="DataConnectionName" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="DataConnectionName" />
                                <span asp-validation-for="DataConnectionName"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <nop-label asp-for="Description" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="Description" />
                                <span asp-validation-for="Description"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <nop-label asp-for="ConnectionKey" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="ConnectionKey" />
                                <span asp-validation-for="ConnectionKey"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>

    </div>

</div>