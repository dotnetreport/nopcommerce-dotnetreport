@model Nop.Plugin.Reports.DotnetReport.Models.DotNetReportConfig

@inject Nop.Core.IWebHelper webHelper
@{
    Layout = "_ConfigurePlugin";
}




<form asp-controller="Setup" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.ActionLink("Go to Setup", "Index", "Setup", new { Area = "Admin" }, new { @class = "btn btn-default pull-right" })
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="ApiUrl" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ApiUrl" />
                        <span asp-validation-for="ApiUrl"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="AccountApiToken" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="AccountApiToken" />
                        <span asp-validation-for="AccountApiToken"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="DataConnectApiToken" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="DataConnectApiToken" />
                        <span asp-validation-for="DataConnectApiToken"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>